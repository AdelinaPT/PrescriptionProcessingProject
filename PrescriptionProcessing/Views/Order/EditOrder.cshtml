@model PrescriptionProcessing.Models.OrderModel

@{
    ViewData["Title"] = "EditOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Your Order</h1>

<h4>OrderModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="IdOrder" class="control-label"></label>*@
                <input asp-for="IdOrder" hidden class="form-control" />
                @*<span asp-validation-for="IdOrder" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="PrescriptionNumber" class="control-label"></label>
                <input asp-for="PrescriptionNumber" class="form-control" />
                <span asp-validation-for="PrescriptionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssuedBy" class="control-label"></label>
                <input asp-for="IssuedBy" class="form-control" />
                <span asp-validation-for="IssuedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
